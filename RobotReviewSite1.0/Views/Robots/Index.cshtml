@model IEnumerable<RobotReviewSite1._0.Models.Robot>
<link href="~/ROBOTINDEXstylesheet.css" rel="stylesheet" />

@{

    ViewBag.Title = "Index";
}

<div class="clip-text">
    Robot Index
</div>

@foreach (var item in Model)
{
<div class="wrap">
    <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".@Html.DisplayFor(modelItem => item.Name)-modal-lg-new">
        Details
    </button>
    <a class="btn btn-primary" href="@Url.Action("Create", "Robots")"><i class="fas fa-user-plus"></i></a>
    <a class="btn btn-primary" href="@Url.Action("Edit", "Robots", new { id = item.RobotID })"><i class="far fa-edit"></i></a>
    <a class="btn btn-primary" href="@Url.Action("Delete", "Robots", new { id = item.RobotID })"><i class="far fa-trash-alt"></i></a>

</div>

    <div class="modal fade @Html.DisplayFor(modelItem => item.Name)-modal-lg-new" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">

        <div class="modal-dialog modal-lg">

            <!-- Modal Content: begins -->
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">
                        @Html.DisplayNameFor(model => model.Category.Function) :
                        @Html.DisplayFor(modelItem => item.Category.Function)
                    </h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="body-message">
                        <h4></h4>
                        <p>
                            @Html.DisplayNameFor(model => model.FirstAppearsIn) : @Html.DisplayFor(modelItem => item.FirstAppearsIn)

                        </p>
                        <p>
                            @Html.DisplayNameFor(model => model.CreatedBy) : @Html.DisplayFor(modelItem => item.CreatedBy)

                        </p>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    <a class="btn btn-default" style="font-size:20px;" href="@Url.Action("Details", "Robots", new { id = item.RobotID })"><i class="fas fa-search-plus"></i></a>
                </div>
                
            </div>
            <!-- Modal Content: ends -->

        </div>

    </div>



}
