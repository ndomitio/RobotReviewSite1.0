@model IEnumerable<RobotReviewSite1._0.Models.Robot>
<link href="~/ROBOTINDEXstylesheet.css" rel="stylesheet" />

@{

    ViewBag.Title = "Index";
}

<div class="clip-text">
    Robot Index
</div>

@foreach (var item in Model)
{
    <div class="wrap">
        <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".@Html.DisplayFor(modelItem => item.Name)-modal-lg-new">
            Details
        </button>
    </div>

    <div class="modal fade @Html.DisplayFor(modelItem => item.Name)-modal-lg-new" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">

        <div class="modal-dialog modal-lg">

            <!-- Modal Content: begins -->
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">Your Headings</h4>
                </div>

                <!-- Modal Body -->
                <div class="modal-body">
                    <div class="body-message">
                        <h4>Any Heading</h4>
                        <p>And a paragraph with a full sentence or something else...</p>
                    </div>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>

            </div>
            <!-- Modal Content: ends -->

        </div>

    </div>

}

<p style="font-size:20px; margin-top:20px;">ADD A ROBOT TO THE INDEX</p>
<a class="btn btn-default" href="@Url.Action("Create", "Robots")"><i class="fas fa-user-plus"></i></a>

